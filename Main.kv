MDScreen:
    name: "main"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        Image:
            source: "ChatBot.jpg"
            size_hint: .7, .4
            pos_hint: {"center_x": .5, "center_y": .8}
        MDLabel:
            text: "Greetings!"
            font_size: "35sp"
            pos_hint: {"center_x": .5, "center_y": .58}
            halign: "center"
            theme_text_color: "Custom"
            text_color: 53/255, 56/255, 60/255, 1
        MDLabel:
            text: "I will discuss you the different programs offered by CCIT UNP! I hope I will be able to help you choose the program suited for you!"
            size_hint: .9, None
            font_size: "18sp"
            pos_hint: {"center_x": .5, "center_y": .45}
            halign: "center"
            theme_text_color: "Custom"
            text_color: 53/255, 56/255, 60/255, 1
        MDLabel:
            text: "Are you ready?"
            font_size: "18sp"
            pos_hint: {"center_x": .5, "center_y": .33}
            halign: "center"
            underlign: "True"
            theme_text_color: "Custom"
            text_color: 1/255, 170/255, 23/255, 1

        MDFloatLayout:
            size_hint: .45, .08
            pos_hint: {"center_x": .5, "center_y": .1}
            canvas:
                Color:
                    rgb: (1/255, 170/255, 23/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [22, 22, 22, 22]
        Button:
            text: ""
            size_hint: .45, .08
            pos_hint: {"center_x": .5, "center_y": .1}
            background_color: 0, 0, 0, 0
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "chats"
        MDLabel:
            text: "I AM READY"
            halign: "center"
            pos_hint: {"center_y": .1}
            font_size: "18sp"
            color: 1, 1, 1, 1
        